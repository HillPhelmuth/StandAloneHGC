@page "/"

<PageTitle>Index</PageTitle>

<h1 class="text-center">Hypergeometric Calculator</h1>
<div class="display-grid">
    <div>
        <RadzenCard>
            <CalcInputs OnHyperResultCalc=HandleHyperResults></CalcInputs>
        </RadzenCard>
    </div>
    <div>
        @if (hyperResult is not null)
        {
            <RadzenCard>
                <CalcResult HyperResult=hyperResult NumberYouWant=want></CalcResult>
            </RadzenCard>
        }
    </div>
</div>